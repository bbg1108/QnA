@model WebApplication3.Models.QuestionAnswer

<head>
    <link rel="stylesheet" href="/lib/smarteditor2/css/smart_editor2.css">
    <script src="/lib/smarteditor2/js/HuskyEZCreator.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/js/SmartEditor.js"></script>
    <link rel="stylesheet" href="~/css/answer.css" asp-append-version="true" />
</head>

<body>
    <div class="info">
        <h2>오피스 인증코드</h2>
        질의 일시 : @Model.Question.Date &nbsp;&nbsp; 질의한 사람 E-mail : @Model.Question.Email
        <br /><br />
    </div>
    <div class="questionContent">
        @Html.Raw(Model.Question.Content)
    </div>

    <form id="qnaForm" asp-action="Answer" method="post">
        <input type="hidden" id="answerId" name="Id" value="@Model.Question.Id" />
        <input type="hidden" name="Email" value="">
    <div id="smarteditor" class="content">
        <label for="editorTxt">내용</label>
        <textarea name="Content"
                  id="editorTxt"
                  rows="20"
                  cols="10"
                  placeholder="내용을 입력해주세요"
                  style="width: 700px; height: 350px"></textarea>
        <span asp-validation-for="Answer.Content"></span>
    </div>
    <div class="right-align">
            <input type="button" value="확인" onclick="submitAnswer()" class="btn btn-primary" />
    </div>
    </form>
</body>